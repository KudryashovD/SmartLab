<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создание карты\nпациента"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="90dp"
            android:textAlignment="center"
            android:text="Пропустить"
            android:textColor="#8B00FF" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Без карты пациента вы не сможете заказать анализы."
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="#939396"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В картах пациентов будут храниться результаты\nанализов вас и ваших близких."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:textColor="#939396"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
            android:textSize="15dp"
            android:height="50dp"
            android:text="   Имя"
            android:textColor="#939396"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
            android:textSize="15dp"
            android:height="50dp"
            android:text="   Отчество"
            android:textColor="#939396"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorners"
            android:textSize="15dp"
            android:height="50dp"
            android:text="   Фамилия"
            android:textColor="#939396"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundedcorners"
            android:textSize="15dp"
            android:text="   Дата рождения"
            android:textColor="#939396"
            android:inputType="date"
            android:layout_marginTop="20dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/roundedcorners"
            android:textSize="15dp"
            android:text="   Пол"
            android:textColor="#939396"
            android:entries="@array/Gender"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Создать"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</LinearLayout>